<!DOCTYPE html>
<html>
    <head>
        <title>Monym</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- Compiled CSS -->
        <link rel="stylesheet" href="bootstrap.css">
        <!-- Static JS -->
        <script src="bootstrap.js"></script>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="fontawesome/css/all.css">
        <script src="fontawesome/js/all.js"></script>
    </head>
    <body class="bg-dark text-light">
        <header class="container-fluid">
            <h1><i class="fas fa-desktop text-primary mr-2"></i>Monym</h1>
        </header>
        <div class="container-sm bg-light text-dark rounded p-2">
            <h1>Sonarr Status</h1>
            <p>Version: <%= info.version%></p>
            <h2>Sonarr Queue</h2>
            <table class="table table-hover table-dark table-bordered">
                <thead class="bg-primary">
                    <tr>
                        <th>Show</th>
                        <th>Episode</th>
                        <th>Status</th>
                        <th>Quality</th>
                        <th>Size Left</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < queue.length; i++) { %>
                    <tr>
                        <td><%= queue[i].series.title %></td>
                        <td><%= queue[i].episode.title %></td>
                        <td><%= queue[i].series.status %></td>
                        <td><%= queue[i].quality.quality.name %></td>
                        <td><%= queue[i].sizeleft %></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>